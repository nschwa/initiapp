source 'https://rubygems.org'

gem 'rails'
gem 'sqlite3'
gem 'turbolinks'
gem 'jquery-rails'
gem 'haml-rails'
gem 'friendly_id'
gem 'devise'
gem 'devise-i18n'

group :development, :test do
  gem 'rspec-rails'
  gem 'spork-rails'

  gem 'guard-rspec'
  gem 'guard-spork'
end

group :test do
  gem 'cucumber-rails', require: false, github: 'cucumber/cucumber-rails'
  gem 'database_cleaner'
  gem 'coveralls', require: false
end
